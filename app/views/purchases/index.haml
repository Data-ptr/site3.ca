- if @charges
  %table.table
    - @charges.each do |charge|
      %tr
        %td= number_to_currency(charge.amount / 100.0)
        %td= charge.description
        %td= Time.at(charge.created)

  - if @charges.has_more
    = link_to 'More purchases', purchases_path(last_purchase: @charges.data.last.id)
